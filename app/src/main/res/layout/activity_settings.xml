<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.SettingsActivity"
    android:background="@drawable/thebackground">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton5"
        android:background="@drawable/leftcheveron"
        android:onClick="onBackkButton5Click"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/textView5"
        android:textColor="#20124d"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/textView7"
        android:layout_below="@+id/backButton5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:paddingBottom="75dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/muteToggleButton"
        android:checked="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Time"
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true"
        android:paddingEnd="30dp" />

    <EditText
        android:id="@+id/timePicker"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Select Time..."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="#d4d4d4"
        android:padding="15dp"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignEnd="@+id/muteToggleButton"
        android:layout_toEndOf="@+id/textView8"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save "
        android:id="@+id/saveButton"
        android:background="#CAE5E5"
        android:textColor="#20124d"
        android:onClick="onSaveButton5Click"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
