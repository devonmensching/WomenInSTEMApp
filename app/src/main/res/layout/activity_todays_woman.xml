        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Today&apos;s Women"
        android:id="@+id/textView2"
        android:textColor="#20124d"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Grace Hopper"
        android:id="@+id/nameTextView"
        android:layout_below="@+id/backButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grace Hopper served in the United Statesâ€™ Navy. Additionally, she was a computer scientist. She invented the first complier for programming languages. Her work led to the development of the first high level programming language, COBOL.  "
