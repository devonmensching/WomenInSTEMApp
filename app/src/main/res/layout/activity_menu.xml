<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.womeninstem.MenuActivity"
    android:background="@drawable/mainmenu">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/leftcheveron"
        android:onClick="onBackkButton1Click" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todaysWomenButton"
        android:layout_marginTop="53dp"
        android:background="@drawable/todaywomenicon"
        android:layout_below="@+id/backButton1"
        android:layout_alignParentStart="true"
        android:onClick="onTodayWomanIconClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutButton"
        android:background="@drawable/abouticon"
        android:layout_alignTop="@+id/todaysWomenButton"
        android:layout_alignParentEnd="true"
        android:onClick="onAboutIconClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/otherWomenButton"
        android:layout_marginTop="82dp"
        android:background="@drawable/otherwomenicon"
        android:layout_below="@+id/aboutButton"
        android:layout_alignParentStart="true"
        android:onClick="onOtherWomenIconClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:background="@drawable/settingsicon"
        android:layout_alignTop="@+id/otherWomenButton"
        android:layout_alignStart="@+id/aboutButton"
        android:onClick="onSettingsIconClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu"
        android:id="@+id/textView"
        android:textColor="#20124d"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
