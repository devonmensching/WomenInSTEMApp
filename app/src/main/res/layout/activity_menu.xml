<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MenuActivity"
    android:background="@drawable/thebackground">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/leftcheveron"
        android:onClick="onBackkButton1Click" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todaysWomenButton"
        android:layout_marginTop="53dp"
        android:background="@drawable/womanicon"
        android:layout_below="@+id/backButton1"
        android:layout_alignParentStart="true"
        android:onClick="onTodayWomanIconClick"
        android:paddingBottom="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutButton"
        android:background="@drawable/abouticon"
        android:layout_alignTop="@+id/todaysWomenButton"
        android:layout_alignParentEnd="true"
        android:onClick="onAboutIconClick"
        android:paddingBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/otherWomenButton"
        android:background="@drawable/womenicon"
        android:onClick="onOtherWomenIconClick"
        android:paddingTop="100dp"
        android:layout_below="@+id/todaysWomenButton"
        android:layout_toStartOf="@+id/imageButton5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:background="@drawable/settingsicon"
        android:onClick="onSettingsIconClick"
        android:layout_alignTop="@+id/otherWomenButton"
        android:layout_alignStart="@+id/aboutButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu"
        android:id="@+id/textView"
        android:textColor="#20124d"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
